/* pages/challenge/challenge.wxss */

.challenge-page {
  min-height: 100vh;
  background: #FFFFFF;
  padding-bottom: 120rpx;
  padding-right: 60rpx;
}

/* 标题 */
.header {
  padding: 60rpx 40rpx 40rpx;
}

.title-line1 {
  display: block;
  font-size: 48rpx;
  font-weight: 900;
  font-style: italic;
  color: #000;
  letter-spacing: 4rpx;
}

.title-line2 {
  display: block;
  font-size: 64rpx;
  font-weight: 900;
  font-style: italic;
  color: #4A90D9;
  letter-spacing: 4rpx;
  margin-left: 40rpx;
}

/* 卡片列表 */
.challenge-list {
  padding: 10rpx 40rpx 20rpx 30rpx;
  height: calc(100vh - 280rpx);
}

/* 挑战卡片 */
.challenge-card {
  margin-bottom: 40rpx;
  border-radius: 24rpx;
  border: 4rpx solid #000;
  box-shadow: 6rpx 6rpx 0 #000;
  overflow: hidden;
  position: relative;
  background: #FFFFFF;
}

/* 图片区域 */
.card-image-area {
  height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.npc-avatar {
  width: 240rpx;
  height: 240rpx;
  border: 3rpx solid #000;
  background: #FFFFFF;
}

.dots {
  position: absolute;
  bottom: 20rpx;
  display: flex;
  gap: 12rpx;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 50%;
}

.dot:first-child {
  background: #000;
}

/* 卡片信息 */
.card-info {
  background: #FFFFFF;
  padding: 20rpx 24rpx;
  border-top: 3rpx solid #000;
  position: relative;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #000;
  flex: 1;
  margin-right: 16rpx;
}

.difficulty-tag {
  padding: 6rpx 18rpx;
  border-radius: 6rpx;
  font-size: 20rpx;
  font-weight: bold;
  color: #FFFFFF;
}

.difficulty-hard {
  background: #E74C3C;
}

.difficulty-medium {
  background: #F39C12;
}

.difficulty-easy {
  background: #27AE60;
}

.card-role {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.card-role text {
  font-size: 24rpx;
  color: #666;
}

.card-desc {
  font-size: 24rpx;
  color: #333;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  padding-right: 70rpx;
}

/* 箭头按钮 - 放在卡片内部右下角 */
.arrow-btn {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  width: 56rpx;
  height: 56rpx;
  background: #000;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.arrow-btn text {
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: bold;
}

/* ========== 弹窗样式 ========== */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 100;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  padding-bottom: 100rpx;
}

.modal-content {
  width: 92%;
  max-width: 680rpx;
  max-height: 85vh;
  background: #FFFFFF;
  border-radius: 32rpx;
  border: 4rpx solid #000;
  box-shadow: 10rpx 10rpx 0 #000;
  overflow: hidden;
  position: relative;
  margin-bottom: env(safe-area-inset-bottom);
}

/* 关闭按钮 */
.modal-close-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 56rpx;
  height: 56rpx;
  background: #FFFFFF;
  border-radius: 50%;
  border: 3rpx solid #000;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.modal-close-btn text {
  font-size: 36rpx;
  font-weight: bold;
  color: #000;
  line-height: 1;
  margin-top: -4rpx;
}

/* 弹窗NPC区域 */
.modal-npc-area {
  height: 320rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-npc-avatar {
  width: 260rpx;
  height: 260rpx;
  border: 4rpx solid #000;
  background: #FFFFFF;
}

/* 弹窗信息区域 */
.modal-info {
  padding: 24rpx 30rpx;
  background: #FFFFFF;
}

.modal-difficulty-tag {
  display: inline-block;
  padding: 8rpx 24rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: 12rpx;
}

.modal-title {
  display: block;
  font-size: 38rpx;
  font-weight: bold;
  color: #000;
  margin-bottom: 20rpx;
}

/* 角色信息 */
.modal-role-section {
  margin-bottom: 20rpx;
}

.modal-role-label {
  display: inline-block;
  font-size: 18rpx;
  font-weight: bold;
  color: #FFF;
  background: #333;
  padding: 5rpx 14rpx;
  border-radius: 6rpx;
  margin-bottom: 10rpx;
  letter-spacing: 2rpx;
}

.modal-role-card {
  background: #FFFDE7;
  border: 3rpx solid #000;
  border-radius: 14rpx;
  padding: 16rpx 20rpx;
}

.modal-role-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #000;
  margin-bottom: 4rpx;
}

.modal-opponent {
  font-size: 24rpx;
  color: #666;
}

/* 任务目标 */
.modal-objectives {
  margin-bottom: 16rpx;
}

.modal-objectives-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.modal-objectives-header text:first-child {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.modal-objectives-header text:last-child {
  font-size: 28rpx;
  font-weight: bold;
  color: #000;
}

.modal-objective-item {
  display: flex;
  align-items: center;
  background: #F5F5F5;
  border-radius: 12rpx;
  padding: 14rpx 18rpx;
  margin-bottom: 10rpx;
}

.modal-objective-number {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #000;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  font-weight: bold;
  margin-right: 14rpx;
  flex-shrink: 0;
}

.modal-objective-text {
  font-size: 26rpx;
  color: #333;
}

/* 开始按钮 */
.modal-start-btn {
  margin: 16rpx 30rpx 24rpx;
  height: 88rpx;
  background: #000;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-start-btn text {
  font-size: 30rpx;
  font-weight: bold;
  color: #FFFFFF;
  letter-spacing: 3rpx;
}

.modal-start-btn .play-icon {
  margin-left: 12rpx;
}

.dots {
  display: none;
}