/* pages/login/login.wxss */

.login-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #4A90D9 0%, #5BA0E9 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 60rpx 100rpx;
  position: relative;
  overflow: hidden;
}

/* 背景波浪装饰 */
.bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
}

.wave {
  position: absolute;
  width: 200%;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 50%;
}

.wave-1 {
  top: 10%;
  left: -50%;
}

.wave-2 {
  top: 25%;
  left: -30%;
}

.wave-3 {
  top: 40%;
  left: -40%;
}

.wave-4 {
  top: 55%;
  left: -20%;
}

.wave-5 {
  top: 70%;
  left: -50%;
}

/* Logo 区域 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 1;
  margin-top: 100rpx;
}

.app-title {
  font-size: 72rpx;
  font-weight: 900;
  font-style: italic;
  color: #FFD700;
  letter-spacing: 4rpx;
}

.app-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-top: 20rpx;
}

/* 登录按钮区域 */
.login-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 1;
  width: 100%;
  margin-bottom: 60rpx;
}

.login-btn {
  width: 100%;
  height: 100rpx;
  background: #07C160;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid #000;
  box-shadow: 6rpx 6rpx 0 #000;
  margin-bottom: 40rpx;
}

.login-btn::after {
  border: none;
}

.login-btn text {
  font-size: 34rpx;
  font-weight: bold;
  color: #FFFFFF;
}

.agreement-text {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.8;
}

.agreement-text .link {
  color: #FFD700;
}
