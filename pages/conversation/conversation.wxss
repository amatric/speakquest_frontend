/* pages/conversation/conversation.wxss */

.conversation-page {
  min-height: 100vh;
  background: #FAF9F6;
  display: flex;
  flex-direction: column;
}

/* 顶部导航 */
.nav-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 60rpx 30rpx 20rpx;
  background: #FFFFFF;
  border-bottom: 4rpx solid #000;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-arrow {
  font-size: 48rpx;
  font-weight: bold;
  color: #000;
}

.back-btn image {
  width: 40rpx;
  height: 40rpx;
}

.progress-section {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.progress-label {
  font-size: 26rpx;
  font-weight: bold;
  color: #999;
  letter-spacing: 2rpx;
}

.progress-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #E74C3C;
}

.npc-mini-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 3rpx solid #000;
}

.npc-mini-avatar image {
  width: 100%;
  height: 100%;
}

/* 进度条 */
.progress-bar-container {
  padding: 20rpx 30rpx;
  background: #FFFFFF;
}

.progress-bar {
  display: flex;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.progress-item {
  flex: 1;
  height: 12rpx;
  background: #E0E0E0;
  border-radius: 6rpx;
  border: 2rpx solid #000;
}

.progress-item.completed {
  background: #000;
}

.current-objective {
  font-size: 24rpx;
  color: #666;
}

/* 对话区域 */
.chat-area {
  flex: 1;
  padding: 30rpx;
  padding-bottom: 350rpx;
}

.message-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.message {
  display: flex;
  max-width: 85%;
}

.npc-message {
  align-self: flex-start;
}

.user-message {
  align-self: flex-end;
}

.message-bubble {
  padding: 24rpx 32rpx;
  border-radius: 24rpx;
  border: 3rpx solid #000;
  box-shadow: 4rpx 4rpx 0 #000;
}

.npc-message .message-bubble {
  background: #FFFFFF;
  border-bottom-left-radius: 8rpx;
}

.user-message .message-bubble {
  background: #A0D2F5;
  border-bottom-right-radius: 8rpx;
}

.message-bubble text {
  font-size: 30rpx;
  line-height: 1.6;
  color: #000;
}

/* 底部工具栏 */
.bottom-toolbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFFFFF;
  border-top: 4rpx solid #000;
  padding: 20rpx 30rpx 50rpx;
  padding-bottom: calc(50rpx + env(safe-area-inset-bottom));
}

.helper-buttons {
  display: flex;
  justify-content: center;
  gap: 60rpx;
  margin-bottom: 24rpx;
}

.helper-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.helper-btn image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 3rpx solid #000;
}

.hint-btn image {
  background: #FFD700;
}

.translate-btn image {
  background: #5DD3D3;
}

.helper-btn text {
  font-size: 22rpx;
  font-weight: bold;
  color: #333;
  letter-spacing: 1rpx;
}

/* 录音按钮 */
.record-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  background: #000;
  border-radius: 50rpx;
  box-shadow: 6rpx 6rpx 0 rgba(0,0,0,0.3);
  gap: 16rpx;
}

.record-btn.recording {
  background: #E74C3C;
}

.record-btn image {
  width: 40rpx;
  height: 40rpx;
}

.record-btn text {
  font-size: 32rpx;
  font-weight: bold;
  color: #FFFFFF;
  letter-spacing: 2rpx;
}

/* 提示弹窗 */
.hint-modal,
.translate-modal,
.complete-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.hint-overlay,
.translate-overlay,
.complete-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.hint-content,
.translate-content,
.complete-content {
  position: relative;
  width: 600rpx;
  background: #FFFFFF;
  border-radius: 32rpx;
  border: 4rpx solid #000;
  box-shadow: 8rpx 8rpx 0 #000;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.hint-title,
.translate-title,
.complete-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
}

.hint-text,
.translate-original {
  font-size: 30rpx;
  color: #333;
  text-align: center;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.translate-result {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 30rpx;
}

.hint-close,
.translate-close,
.complete-btn {
  padding: 20rpx 60rpx;
  background: #000;
  color: #FFFFFF;
  border-radius: 30rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.complete-xp {
  font-size: 48rpx;
  font-weight: bold;
  color: #FFD700;
  margin-bottom: 30rpx;
}

/* ========== 结算页面样式 ========== */
.result-page {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #FFFFFF;
  z-index: 200;
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  overflow-y: auto;
}

.result-back {
  width: 80rpx;
  height: 80rpx;
  border: 4rpx solid #000;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

.result-back .back-arrow {
  font-size: 40rpx;
  font-weight: bold;
}

/* 奖杯区域 */
.trophy-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.trophy-circle {
  width: 300rpx;
  height: 300rpx;
  background: #FAE052;
  border: 8rpx solid #000;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.trophy-icon {
  width: 180rpx;
  height: 180rpx;
}

.result-rating {
  font-size: 56rpx;
  font-weight: 900;
  font-style: italic;
  color: #000;
  margin-bottom: 20rpx;
}

.stars-row {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.star {
  font-size: 48rpx;
}

.feedback-tag {
  padding: 16rpx 40rpx;
  border: 3rpx solid #000;
  border-radius: 40rpx;
}

.feedback-tag text {
  font-size: 28rpx;
  color: #333;
}

/* 通用区块样式 */
.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  font-size: 28rpx;
}

.vocab-icon {
  background: #4A90D9;
}

.phrase-icon {
  background: #9B59B6;
}

.section-title {
  font-size: 32rpx;
  font-weight: 900;
  font-style: italic;
  color: #000;
}

/* VOCAB BOOST */
.vocab-section {
  margin-bottom: 40rpx;
}

.vocab-card {
  background: #F8F8F8;
  border: 3rpx solid #000;
  border-radius: 20rpx;
  padding: 20rpx 30rpx;
}

.vocab-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #E0E0E0;
}

.vocab-item:last-child {
  border-bottom: none;
}

.vocab-word {
  font-size: 32rpx;
  font-weight: bold;
  color: #000;
}

.vocab-type {
  font-size: 24rpx;
  color: #666;
  padding: 8rpx 20rpx;
  border: 2rpx solid #999;
  border-radius: 20rpx;
}

/* KEY PHRASE */
.phrase-section {
  margin-bottom: 60rpx;
}

.phrase-card {
  background: #F8F8F8;
  border: 3rpx solid #000;
  border-radius: 20rpx;
  padding: 30rpx;
}

.phrase-text {
  font-size: 30rpx;
  font-style: italic;
  color: #333;
  line-height: 1.6;
}

/* CONTINUE 按钮 */
.continue-btn {
  background: #000;
  border-radius: 50rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: auto;
}

.continue-btn text {
  font-size: 34rpx;
  font-weight: bold;
  color: #FFFFFF;
  letter-spacing: 4rpx;
}
