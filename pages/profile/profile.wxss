/* pages/profile/profile.wxss */

.profile-page {
  min-height: 100vh;
  background: #FAF9F6;
}

/* 顶部黄色区域 */
.header-section {
  background: #FFD700;
  padding: 80rpx 40rpx 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  position: relative;
}

.header-section::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 10rpx;
  background: #000;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}

.avatar-container {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  border: 6rpx solid #000;
  overflow: hidden;
  margin-bottom: 24rpx;
  box-shadow: 6rpx 6rpx 0 rgba(0,0,0,0.2);
}

.avatar {
  width: 100%;
  height: 100%;
}

.username {
  font-size: 42rpx;
  font-weight: bold;
  font-style: italic;
  color: #000;
  margin-bottom: 12rpx;
}

.user-id {
  background: #FFFFFF;
  padding: 8rpx 24rpx;
  border-radius: 20rpx;
  border: 3rpx solid #000;
}

.user-id text {
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
}

/* 内容区域 */
.content-section {
  padding: 30rpx;
  margin-top: -20rpx;
}

/* 等级卡片 */
.level-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  border: 4rpx solid #000;
  box-shadow: 6rpx 6rpx 0 #000;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.level-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.level-icon {
  width: 50rpx;
  height: 50rpx;
  background: #000;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
}

.level-icon image {
  width: 30rpx;
  height: 30rpx;
}

.level-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #000;
  flex: 1;
}

.xp-text {
  font-size: 26rpx;
  font-weight: bold;
  color: #666;
}

.progress-bar {
  height: 20rpx;
  background: #E0E0E0;
  border-radius: 10rpx;
  border: 3rpx solid #000;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: #4A90D9;
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

/* 知识背包按钮 */
.backpack-btn {
  background: #C8A0D9;
  border-radius: 24rpx;
  border: 4rpx solid #000;
  box-shadow: 6rpx 6rpx 0 #000;
  padding: 36rpx 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.backpack-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.backpack-btn text {
  flex: 1;
  font-size: 30rpx;
  font-weight: bold;
  color: #000;
  letter-spacing: 2rpx;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 设置区域 */
.settings-section {
  margin-bottom: 40rpx;
}

.settings-title {
  font-size: 28rpx;
  font-weight: bold;
  font-style: italic;
  color: #333;
  margin-bottom: 20rpx;
  margin-left: 10rpx;
}

.setting-item {
  background: #FFFFFF;
  border-radius: 24rpx;
  border: 4rpx solid #000;
  box-shadow: 4rpx 4rpx 0 #000;
  padding: 24rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.setting-left {
  display: flex;
  align-items: center;
}

.setting-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.music-icon {
  background: #FFE4EC;
}

.sound-icon {
  background: #FFF0E0;
}

.setting-icon image {
  width: 36rpx;
  height: 36rpx;
}

.setting-item text {
  font-size: 30rpx;
  color: #000;
}

/* 退出登录 */
.logout-btn {
  display: flex;
  align-items: center;
  padding: 20rpx 10rpx;
}

.logout-btn image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}

.logout-btn text {
  font-size: 28rpx;
  color: #E74C3C;
  font-weight: bold;
}
